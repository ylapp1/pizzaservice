<table class="table table-hover pizza-table">

    <thead>
        <tr>
            <th>Bestellnummer</th>
            <th>Pizza Name</th>
            <th>Preis</th>
            <th>Zutaten</th>
            <th>{% block actionButtonColumnTitle %}{% endblock %}</th>
        </tr>
    </thead>

    <tbody>

        {% if pizzas|length == 0 %}

        <td colspan="5" class="alert alert-info text-center">{% block pizzaListEmpty %}{% endblock %}</td>

        {% else %}

            {% for pizza in pizzas %}

                <tr>
                    <td>{{ pizza.orderCode }}</td>
                    <td>{{ pizza.name }}</td>
                    <td>{{ pizza.price|number_format(2, ".", "") }} â‚¬</td>
                    <td>{{ pizza.pizzaIngredients|nl2br }}</td>
                    <td>
                        <form class="form-inline pizza-action">
                            <input type="number"
                                   class="form-control"
                                   name="amount"
                                   min="1"
                                   max="50"
                                   value="{{ pizza.amount }}"
                                   data-val="{{ pizza.amount }}">
                            {% block actionButton %}{% endblock %}
                        </form>
                    </td>
                </tr>

            {% endfor %}

        {% endif %}

    </tbody>

</table>
