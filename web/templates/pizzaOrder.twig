{% extends "base.twig" %}

{# Head #}
{% block pageTitle %}Bestellung{% endblock %}
{% block pageJavaScript %}pizzaOrder.js{% endblock %}
{% block basePath %}../../{% endblock %}

{# Navigation bar#}
{% set pizzaOrderActive = true %}

{# Main content #}
{% block content %}

    {# Table of pizzas in the order list #}
    {% embed "blocks/pizzaTable.twig" %}

        {% block actionButtonColumnTitle %}Anpassen{% endblock %}
        {% block actionButton %}
            <a class="btn btn-danger" href="web/order?delete={{ pizza.orderCode }}">Löschen</a>
        {% endblock %}
        {% block pizzaListEmpty %}Die Bestellung ist leer{% endblock %}

    {% endembed %}

    <hr>
    <p class="text-right totalPrice">Gesamt: <span>{{ totalPrice|default(0)|number_format(2, ".", "") }}</span> €</p>

    {% embed "blocks/addressInputField.twig" %}{% endembed %}

{% endblock %}
