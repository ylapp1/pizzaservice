<?xml version="1.0" encoding="UTF-8"?>
<database name="pizza_service" defaultIdMethod="native" namespace="PizzaService\Propel\Models">

    <!-- Tables for translation of ingredient names -->
    <!-- Schema idea from https://www.apphp.com/tutorials/index.php?page=multilanguage-database-design-in-mysql -->
    <table name="languages" phpName="Language">
        <column name="code" type="varchar" size="5" required="true" primaryKey = "true"/>
        <column name="name" type="varchar" size="100" required="true"/>

        <!-- Every language code may appear only once -->
        <unique>
            <unique-column name="code"/>
        </unique>

        <!-- Every language name may appear only once -->
        <unique>
            <unique-column name="name"/>
        </unique>
    </table>

</database>
